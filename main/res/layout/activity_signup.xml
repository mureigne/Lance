<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:background="@drawable/form_card_background"
            android:elevation="10dp">

            <!-- Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Account Sign-Up Form"
                android:textColor="#4A148C"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:paddingBottom="8dp"/>

            <!-- Subtitle -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Use this form and get started quickly."
                android:textColor="#555555"
                android:textSize="14sp"
                android:layout_gravity="center_horizontal"
                android:paddingBottom="24dp"/>

            <!-- Username -->
            <EditText
                android:id="@+id/editUsername"
                style="@style/FormInputStyle"
                android:hint="Username" />

            <!-- Full Name -->
            <EditText
                android:id="@+id/editName"
                style="@style/FormInputStyle"
                android:hint="Full Name" />

            <!-- Phone -->
            <EditText
                android:id="@+id/editPhone"
                style="@style/FormInputStyle"
                android:hint="Phone Number"
                android:inputType="phone" />

            <!-- Email -->
            <EditText
                android:id="@+id/editSignUpEmail"
                style="@style/FormInputStyle"
                android:hint="Email Address"
                android:inputType="textEmailAddress" />

            <!-- Password -->
            <EditText
                android:id="@+id/editSignUpPassword"
                style="@style/FormInputStyle"
                android:hint="Password"
                android:inputType="textPassword" />

            <!-- Sign Up Button -->
            <Button
                android:id="@+id/btnSignUp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sign Up"
                android:textAllCaps="false"
                android:backgroundTint="#6A1B9A"
                android:textColor="#FFFFFF"
                android:layout_marginTop="24dp" />

            <!-- Login Link -->
            <TextView
                android:id="@+id/textGoToLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Already have an account? Login"
                android:textColor="#6A1B9A"
                android:textSize="14sp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="24dp" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
